#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	int letra;

	printf("Ingrese una letra: ");
	fflush(stdin);
	scanf("%c", &letra);

	printf("La letra es: %c", letra);

	return EXIT_SUCCESS;
}

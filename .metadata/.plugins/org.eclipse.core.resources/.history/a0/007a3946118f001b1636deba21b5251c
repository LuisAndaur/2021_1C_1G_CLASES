float promedioPositivos(int numero)
{
	float promedio;
	int acumuladorPositivos;
	int contadorPositivos;

	acumuladorPositivos = 0;
	contadorPositivos = 0;

	acumuladorPositivos =+ numero;
	contadorPositivos++;

	promedio = (float)acumuladorPositivos/contadorPositivos;

}



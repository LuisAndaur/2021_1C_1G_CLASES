#include <stdio.h>
#include <stdlib.h>
//#include "biblioteca.h"

float promedioPositivos(int acumulador, int contador);
//int cantidadCeros(int);
//int sumaAntecesores(int);

int main(void) {
	setbuf(stdout, NULL);

	int numero;
	int i;
	int positivos;
	int acumuladorPositivos;
	int contadorPositivo;

	acumuladorPositivos = 0;
	contadorPositivo = 0;

	for(i=0;i<3;i++)
	{
		printf("Ingrese un numero: ");
		scanf("%d", &numero);

		if(numero>0)
		{
			acumuladorPositivos =+ numero;
			contadorPositivo++;
			positivos = promedioPositivos(acumuladorPositivos, contadorPositivo);
		}
		/*else
		{
			if(numero<0)
			{
				negativos = sumaAntecesores(numero)
			}
			else
			{
				ceros = cantidadCeros
			}
		}*/
	}



	printf("El numero es: %f", positivos);

	return EXIT_SUCCESS;
}

float promedioPositivos(int acumulador, int contador)
{
	float promedio;

	promedio = (float)acumulador/contador;

	return promedio;

}


